<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <title>new posts</title>
    <!-- css  -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Gloria+Hallelujah&family=Madimi+One&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&family=Protest+Riot&family=Protest+Strike&family=Roboto+Slab:wght@100..900&display=swap');

        * {
            padding: 0;
            margin: 0;
        }

        body {
            display: flex;
            justify-content: space-between;
        }

        .create {
            height: 100vh;
            width: 480px;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 15px;
        }

        .create div input {
            width: 460px;
        }

        textarea {
            width: 460px;
        }

        .create div {
            margin: 10px;
        }

        .create p {
            font-size: 35px;
        }

        .create button {
            font-size: 20px;
        }

        .funkyfont {
            font-family: "Gloria Hallelujah", cursive;
            font-weight: 400;
            font-style: normal;
        }

        .back {
            background-color: white;
            border: none;
        }

        .backward {
            padding: 20px 40px;
        }
        @media (min-width:330px) and (max-width:400px)  {
            .backward {
                display: none;
            }
            .create {
                width: 325px;
            }
            #photo, #location {
                width: 300px;
            }
            #caption {
                width: 300px;
            }
            .mediachangeH {
                font-size: 20px !important;
            }
            .mediachange {
                font-size: 15px !important;
            }
        }
    </style>

</head>
<body>
        <div class="backward">
            <form method="get" action="/posts">
                <button class="back"><i class="fa-solid fa-left-long fa-2xl"></i> Back</button>
            </form>
        </div>

        <div>
            <form method="post" action="/posts" class="needs-validation" novalidate enctype="multipart/form-data">
            
                <div class="create">
                    <p class="funkyfont mediachangeH">Create New Post</p>
    
                    <div>
                        <textarea name="posts[caption]" id="caption" cols="60" rows="5" placeholder="Caption" class="form-control" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please choose a caption.
                        </div>
                    </div>
                    
                    <div>
                        <input type="file" id="photo" class="form-control" name="posts[photo]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please choose a URL.
                        </div>
                    </div>
                    
                    <div>
                        <input type="text" id="location" class="form-control" placeholder="location" name="posts[location]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please choose a location.
                        </div>
                    </div>
    
                    <button class="btn btn-info funkyfont mediachange">Post</button>
                </div>
            </form>
        </div>

        <div class="backward">
            <form method="get" action="/posts">
                <button class="back"><i class="fa-solid fa-house fa-2xl"></i></button>
            </form>
        </div>

    <script>
                (() => {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        const forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }

            form.classList.add('was-validated')
            }, false)
        })
        })()
    </script>
</body>
</html>