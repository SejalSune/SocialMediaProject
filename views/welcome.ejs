<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <title>new posts</title>
    <!-- css  -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Gloria+Hallelujah&family=Madimi+One&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&family=Protest+Riot&family=Protest+Strike&family=Roboto+Slab:wght@100..900&display=swap');

        * {
            padding: 0;
            margin: 0;
        }

        body {
            display: flex;
            justify-content: space-between;
            background-image: url("background.jpg");
            background-size: cover;
        }

        .create {
            height: 100vh;
            width: 480px;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 15px;
        }

        .create div input {
            width: 460px;
        }

        textarea {
            width: 460px !important;
        }

        .create div {
            margin: 10px;
        }

        .create p {
            font-size: 35px;
        }

        .create button {
            font-size: 20px;
        }

        .funkyfont {
            font-family: "Gloria Hallelujah", cursive;
            font-weight: 400;
            font-style: normal;
        }

        .back {
            background-color: white;
            border: none;
        }

        .backward {
            padding: 20px 40px;
        }

        @media (max-width: 480px) {
            .backward {
                display: none;
            }
            .mediachangeH {
                font-size: 20px !important;
            }
            .mediachange {
                font-size: 15px !important;
            }
            .create {
                width: 340px;
                padding-left: 30px;
                padding-right: 30px;
            }
            .alert {
                width: 300px !important;
                padding: 5px !important;
            }
        }

    </style>

</head>
<body>
        <div class="backward">
            <form method="get" action="/posts">
                <button class="back"><i class="fa-solid fa-left-long fa-2xl"></i> Back</button>
            </form>
        </div>

        <div>
            <form method="post" action="/welcome" class="needs-validation" novalidate>
            
                <div class="create">
                    <p class="funkyfont mediachangeH">Welcome to Connectogram!!!</p>
                    <% if(success && success.length) {%>
                        <div class="alert alert-success" role="alert">
                            <%= success %>
                        </div>
                    <% } %>
                
                    <% if(error && error.length) {%>
                        <div class="alert alert-danger" role="alert">
                            <%= error %>
                        </div>
                    <% } %>
                    
                    <% if(! curruser) { %>
                    <div><a href="/signup" class="btn btn-info btn-lg mediachange">Signup</a></div>
                    <div><a href="/login" class="btn btn-info btn-lg mediachange">Login</a></div>
                    <% } %>
                    <% if(curruser) { %>
                    <div><a href="/logout" class="btn btn-info btn-lg mediachange">Logout</a></div>
                    <% } %>
                </div>
            </form>
        </div>

        <div class="backward">
            <form method="get" action="/posts">
                <button class="back"><i class="fa-solid fa-house fa-2xl"></i></button>
            </form>
        </div>

    <script>
                (() => {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        const forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }

            form.classList.add('was-validated')
            }, false)
        })
        })()
    </script>
</body>
</html>